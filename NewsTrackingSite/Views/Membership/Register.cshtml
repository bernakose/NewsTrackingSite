@model NewsTrackingSite.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="blog">
    <div class="container">

        <div class="row" style="text-align: center">
            <div class="col-lg-12 wp2 delay-05s">
                <div class="sidebar-widget content_top">
                    <h2>@NewsTrackingSite.Resource.lang.KayıtOl</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Login -->
            <div class="col-lg-12 wp2 delay-05s">

                @using (Html.BeginForm("Register", "Membership", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="row" style="margin: 3%">
                            <div class="col-lg-12">
                                @Html.ValidationSummary()
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.ProfilFoto)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.ProfilPicture, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProfilPicture, "", new { @class = "text-danger" })
                                <input type="file" name="file" class="form-control" />
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.Ad)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.SoyAd)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.LName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.EMail)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.Şifre)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.Label(NewsTrackingSite.Resource.lang.Telefon)
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="row">
                            <center><input type="submit" value="@NewsTrackingSite.Resource.lang.Kaydet" class="btn btn-default" /></center>
                        </div>
                    </div>
                }
            </div><!-- /.col-lg-6 -->

        </div><!-- /.row -->


    </div>
</section>

