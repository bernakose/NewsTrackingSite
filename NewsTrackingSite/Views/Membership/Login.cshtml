@model NewsTrackingSite.Models.ViewModels.NLoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["User"] != null)
    {
        Response.Redirect("~/Profile");
    }
}

@section additionalJs{
    @if (ViewBag.LoginSuccess != null && ViewBag.LoginSuccess)
    {
        <div id="wrapper">
            <div id="message-sent">
                <div id="close-button">
                    <span>X</span>
                </div>
                <span>Başarıyla giriş yapıldı.</span>
            </div>
        </div>
    }

    <script>
        $('#wrapper').click(function () {
            $(this).fadeOut('slow');
        });
    </script>
}

<section id="blog">
    <div class="container">

        <div class="row" style="text-align:center">
            <div class="col-lg-12 wp2 delay-05s">
                <div class="sidebar-widget content_top">
                    <h2>@NewsTrackingSite.Resource.lang.GİRİŞ</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Login -->
            <div class="col-lg-12 wp2 delay-05s">
                @using (Html.BeginForm("Login", "Membership", FormMethod.Post, new { @class = "form-section", role = "form", @style = "margin-left: 28%; margin-right: 28%" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-group">

                    <div class="row" style="margin: 3%">
                        <div class="col-lg-12">
                            @Html.ValidationSummary()
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            @Html.Label(NewsTrackingSite.Resource.lang.EMail)
                        </div>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.EMail, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-lg-4">
                            @Html.Label(NewsTrackingSite.Resource.lang.Şifre)
                        </div>
                        <div class="col-lg-8">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-lg-4"></div>
                        <div class="col-lg-1">
                            <input type="submit" value="@NewsTrackingSite.Resource.lang.GİRİŞ" class="btn" />
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
                }
            </div><!-- /.col-lg-6 -->

        </div><!-- /.row -->

    </div><!-- /.container -->
</section><!-- /#blog -->
