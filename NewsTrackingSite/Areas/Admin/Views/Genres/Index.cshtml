@model IEnumerable<NewsTrackingSite.Models.Genre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-7 wp2 delay-05s">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
    <div class="col-lg-5 wp2 delay-05s">
        <div class="btn-group" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    @ViewBag.CurrentDDLText
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Genre Name", "Index", new { sorting = ViewBag.GenreNameSortParam })</li>
                </ul>
            </div>
            <a href="@Url.Action("Index", new { sorting = ViewBag.CurrentSortParam })" class="btn btn-default" role="button" title="@(ViewBag.ResortBtnAlt as string)"><i class="@(ViewBag.CurrentArrow as string)"></i></a>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { genreID = item.GenreID }) |
            @Html.ActionLink("Details", "Details", new { genreID = item.GenreID }) |
            @Html.ActionLink("Delete", "Delete", new { genreID = item.GenreID })
        </td>
    </tr>
}

</table>
